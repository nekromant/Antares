choice
  prompt "Optimisation level"

  config CC_OPT0
  bool "-O0"

  config CC_OPT1
  bool "-O1"

  config CC_OPT2
  bool "-O2"

  config CC_OPT3
  bool "-O3"

  config CC_OPTSZ
  bool "-Os"

endchoice

config GCC_NOSTDLIBS
bool "Do not link against stdlib"
	help
	Adds -nostdlib to gcc flags


config GCC_G
bool "Generate debug symbols"

config GCC_LC
bool "Link agains -lc"

config GCC_LM
bool "Link agains -lm"

config GCC_STRIP
bool "Remove dead code"
	help
		Strips symbol info, unused function and other crap,
		from the binary, resulting in smaller size. 
	
config GCC_PARANOID_WRN
bool "CodeMonkey buster! (tm)"
help
  Adds -Wall -Werror flags. (trollface.jpg) A true paranoid
  behaviour. But that helps to keep some bad code from noobz 
  out of the main tree. Sometimes

config GCC_WRN_MISS_DECLARATION
bool "Add -Wmissing-declarations"
default y
depends on GCC_PARANOID_WRN
help
  Warn if a global function is defined without a previous declaration.

config GCC_WRN_MIXED_CODE
bool "Add -Wdeclaration-after-statement"
default y
depends on GCC_PARANOID_WRN
help
  Warn when a declaration is found after a statement in a block. 

comment "Fine tuning"

config CFLAGS
string "Additional C compiler flags (cc)"

config ASFLAGS
string "Additional Assembler flags (as)"

config LDFLAGS
string "Additional Linker flags (ld)"

config ELFFLAGS
string "Additional Linker flags (When linking final elf) (ld)"

